erDiagram
    USER ||--o{ PROJECT : owns
    PROJECT ||--o{ DATABASE_SCHEMA : contains
    DATABASE_SCHEMA ||--o{ DB_TABLE : has
    DB_TABLE ||--o{ COLUMN : has
    DB_TABLE ||--o{ TABLE_RELATIONSHIP : source
    DB_TABLE ||--o{ TABLE_RELATIONSHIP : target

    USER {
        string user_id PK
        string name
        string email

    PROJECT {
        string project_id PK
        string user_id FK
        string name
        string description
        datetime created_at

    DATABASE_SCHEMA {
        string schema_id PK
        string project_id FK
        string name
        string version

    DB_TABLE {
        string table_id PK
        string schema_id FK
        string name
        string description

    COLUMN {
        string column_id PK
        string table_id FK
        string name
        string data_type
        boolean is_nullable
        boolean is_primary_key
        boolean is_foreign_key

    TABLE_RELATIONSHIP {
        string relationship_id PK
        string source_table_id FK
        string target_table_id FK
        string relationship_type
        string source_column_id FK
        string target_column_id FK