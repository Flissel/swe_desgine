{
  "name": "dashboard-electron",
  "version": "1.0.0",
  "description": "RE System Dashboard - Electron + TypeScript + React",
  "main": "dist-electron/main/index.js",
  "scripts": {
    "start": "electron .",
    "start:dev": "concurrently \"vite --config electron.vite.config.ts\" \"wait-on http://localhost:5173 && NODE_ENV=development electron .\"",
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "build:win": "electron-vite build && electron-builder --win",
    "build:mac": "electron-vite build && electron-builder --mac",
    "build:linux": "electron-vite build && electron-builder --linux",
    "preview": "electron-vite preview",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "mermaid": "^10.9.0",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.17",
    "electron": "^25.9.8",
    "electron-builder": "^24.13.0",
    "electron-vite": "^2.0.0",
    "postcss": "^8.4.35",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.0",
    "vite": "^5.1.0"
  },
  "build": {
    "appId": "com.sakana.dashboard",
    "productName": "RE Dashboard",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist-electron"
    ],
    "win": {
      "target": [
        "nsis"
      ]
    }
  }
}
